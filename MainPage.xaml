<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToDoList.VistaModelo"
             x:Class="TodoList_PaolaDeras.MainPage">
    <ContentPage.BindingContext>
        <local:VistaModelo/>
    </ContentPage.BindingContext>

    <StackLayout Padding="20">

        
        <Entry Placeholder="Título de la nueva tarea" Text="{Binding NuevoTituloTarea}" />

        <CollectionView ItemsSource="{Binding Tasks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding Completada, Mode=TwoWay}" />
                        <Label Text="{Binding Titulo}" FontSize="Medium" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        
        <Button Text="Agregar Tarea" Command="{Binding AddTaskCommand}" />

       
        <Button Text="Eliminar Tareas Seleccionadas" Command="{Binding DeleteSelectedTasksCommand}" />

    </StackLayout>
</ContentPage>
